<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dam.proyectodamdaw">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDamDaw"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.preferencias.Preferencias"
            android:exported="false" />
        <activity
            android:name=".activities.NuevaCiudad"
            android:exported="false" />
        <activity
            android:name=".activities.SelecionCiudad"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".activities.SelecionCiudad"
            android:foregroundServiceType="location"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SecondActivity"
            android:theme="@style/Theme.ProyectoDamDaw" />
    </application>

</manifest>