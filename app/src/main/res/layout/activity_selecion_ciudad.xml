<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelecionCiudad">

  <Spinner
      android:id="@+id/spinnerCiudad"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="64dp"
      android:contentDescription="Ciudad"
      android:minHeight="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imaCiu"
      android:layout_width="0dp"
      android:layout_height="180dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

  <Button
      android:id="@+id/pronostico"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Pronostico"
      app:layout_constraintEnd_toEndOf="@+id/spinnerCiudad"
      app:layout_constraintStart_toStartOf="@+id/spinnerCiudad"
      app:layout_constraintTop_toBottomOf="@+id/spinnerCiudad" />

  <Button
      android:id="@+id/añadir"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:text="añadir"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <Button
      android:id="@+id/gps"
      android:layout_width="60dp"
      android:layout_height="50dp"
      app:icon="@drawable/ic_baseline_gps_fixed_24"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/spinnerCiudad"
      app:layout_constraintTop_toTopOf="@+id/spinnerCiudad" />

</androidx.constraintlayout.widget.ConstraintLayout>