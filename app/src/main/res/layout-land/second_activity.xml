<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/hora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="22:00"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fecha2"
        app:layout_constraintTop_toTopOf="@+id/fecha2" />

    <TextView
        android:id="@+id/descripcion2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="descrip"
        app:layout_constraintBottom_toBottomOf="@+id/icon2"
        app:layout_constraintStart_toEndOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/fecha2" />

    <TextView
        android:id="@+id/tempMax2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Max"
        app:layout_constraintStart_toEndOf="@+id/datosTemp2"
        app:layout_constraintTop_toTopOf="@+id/datosTemp2" />

    <TextView
        android:id="@+id/datosMax2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="10ยบ"
        android:textColor="#FF0000"
        app:layout_constraintStart_toEndOf="@+id/tempMax2"
        app:layout_constraintTop_toTopOf="@+id/tempMax2" />

    <TextView
        android:id="@+id/datosMIn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="9ยบ"
        android:textColor="#002AFF"
        app:layout_constraintStart_toEndOf="@+id/tempMin2"
        app:layout_constraintTop_toTopOf="@+id/tempMin2" />

    <TextView
        android:id="@+id/fecha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="fecha"
        app:layout_constraintStart_toEndOf="@+id/dia2"
        app:layout_constraintTop_toTopOf="@+id/dia2" />

    <TextView
        android:id="@+id/temperatura2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Temp"
        app:layout_constraintBottom_toBottomOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/descripcion2" />

    <TextView
        android:id="@+id/dia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="dia"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon2"
        app:layout_constraintTop_toTopOf="@+id/icon2" />

    <TextView
        android:id="@+id/datosTemp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="10ยบ"
        app:layout_constraintStart_toEndOf="@+id/temperatura2"
        app:layout_constraintTop_toTopOf="@+id/temperatura2" />

    <TextView
        android:id="@+id/tempMin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Min"
        app:layout_constraintStart_toEndOf="@+id/datosMax2"
        app:layout_constraintTop_toTopOf="@+id/datosMax2" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/velocidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Velocidad"
        app:layout_constraintEnd_toEndOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/icon2" />

    <TextView
        android:id="@+id/vientoVe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/velocidad"
        app:layout_constraintStart_toEndOf="@+id/velocidad"
        app:layout_constraintTop_toTopOf="@+id/velocidad" />

    <Button
        android:id="@+id/atrasMasInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Viento"
        app:layout_constraintEnd_toEndOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/icon2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Direccion"
        app:layout_constraintBottom_toBottomOf="@+id/velocidad"
        app:layout_constraintStart_toEndOf="@+id/velocidad"
        app:layout_constraintTop_toTopOf="@+id/velocidad"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/vientoDeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/humedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Humedad"
        app:layout_constraintEnd_toEndOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/velocidad" />

</androidx.constraintlayout.widget.ConstraintLayout>